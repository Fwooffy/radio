  <script>
    const audio = document.getElementById('player');
    const playBtn = document.getElementById('playBtn');
    const stopBtn = document.getElementById('stopBtn');
    const vol = document.getElementById('vol');
    const volLabel = document.getElementById('volLabel');

    const dot = document.getElementById('dot');
    const statusText = document.getElementById('statusText');
    const nowTitle = document.getElementById('nowTitle');

    const listeners = document.getElementById('listeners');
    const listenersInline = document.getElementById('listenersInline');
    const bitrate = document.getElementById('bitrate');
    const stype = document.getElementById('stype');
    const serverName = document.getElementById('serverName');
    const updated = document.getElementById('updated');
    const debug = document.getElementById('debug');

    const meterFill = document.getElementById('meterFill');

    // Volume
    audio.volume = parseFloat(vol.value);
    volLabel.textContent = audio.volume.toFixed(2);
    vol.addEventListener('input', () => {
      audio.volume = parseFloat(vol.value);
      volLabel.textContent = audio.volume.toFixed(2);
    });

    // Controls
    playBtn.addEventListener('click', async () => {
      try {
        await audio.play();
      } catch (e) {
        // Mobile autoplay / gesture rules
        console.log(e);
      }
    });

    stopBtn.addEventListener('click', () => {
      audio.pause();
      // Resetting currentTime on a live stream can throw in some browsers; guard it.
      try { audio.currentTime = 0; } catch (e) {}
    });

    // Icecast status polling
    function pickSource(src) {
      // icestats.source can be object or array. Choose the mount matching stream.mp3 if possible.
      if (!src) return null;
      if (Array.isArray(src)) {
        return src.find(s => (s.listenurl || "").includes("stream.mp3")) || src[0];
      }
      return src;
    }

    async function fetchStatus() {
      const t0 = Date.now();
      try {
        const res = await fetch('/status-json.xsl', { cache: 'no-store' });
        if (!res.ok) throw new Error(`HTTP ${res.status}`);
        const data = await res.json();

        const src = pickSource(data?.icestats?.source);
        const isOn = !!src;

        dot.classList.toggle('on', isOn);
        statusText.textContent = isOn ? 'ON AIR' : 'offline?';
        nowTitle.textContent = src?.title || src?.server_name || 'On air';

        const l = src?.listeners ?? 0;
        listeners.textContent = String(l);
        listenersInline.textContent = String(l);

        bitrate.textContent = src?.bitrate ? `${src.bitrate} kbps` : 'â€”';
        stype.textContent = src?.server_type || 'â€”';
        serverName.textContent = data?.icestats?.server_id || 'Icecast';

        const dt = new Date();
        updated.textContent = dt.toLocaleTimeString();
        debug.textContent = `status in ${Date.now() - t0}ms`;

      } catch (e) {
        dot.classList.remove('on');
        statusText.textContent = 'offline?';
        debug.textContent = 'status fetch failed';
      }
    }

    fetchStatus();
    setInterval(fetchStatus, 10000);

    // Tiny audio activity meter (works once audio is playing and CORS allows it)
    // This is best-effort; if the browser blocks it, we just keep it idle.
    (function meter(){
      let ctx, analyser, data;
      try {
        ctx = new (window.AudioContext || window.webkitAudioContext)();
        analyser = ctx.createAnalyser();
        analyser.fftSize = 256;
        data = new Uint8Array(analyser.frequencyBinCount);

        const srcNode = ctx.createMediaElementSource(audio);
        srcNode.connect(analyser);
        analyser.connect(ctx.destination);

        function tick(){
          analyser.getByteFrequencyData(data);
          let sum = 0;
          for (let i=0; i<data.length; i++) sum += data[i];
          const avg = sum / data.length;        // 0..255-ish
          const pct = Math.min(100, Math.max(0, (avg / 255) * 140)); // punch it a bit
          meterFill.style.width = pct.toFixed(1) + '%';
          requestAnimationFrame(tick);
        }
        tick();

        // Resume context on user gesture if needed
        playBtn.addEventListener('click', () => {
          if (ctx.state === 'suspended') ctx.resume().catch(()=>{});
        });

      } catch (e) {
        // If it fails (CORS/Autoplay policies), keep the meter calm.
        meterFill.style.width = '0%';
      }
    })();
  </script>
</body>
